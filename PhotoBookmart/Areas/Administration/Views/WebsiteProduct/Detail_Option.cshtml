@model Product
@{
    List<Product_Option> Option = Db.Select<Product_Option>(m => m.Where(x => x.Status));
}
<div class="mws-panel grid_8">
    <div class="mws-panel-header">
        <span><i class="icon-table"></i>Manage options for product @Model.Name</span>
    </div>
    <div class="mws-panel-toolbar">
        <div class="btn-toolbar">
            <div class="btn-group">
                <a href="@Url.Action("Detail_Option_Add", new { product_id = Model.Id })" class="btn">
                    <i class="icol-add"></i>Add</a>
            </div>
        </div>
    </div>
    <div class="mws-panel-body no-padding" id = "WDTB_Option">
        @Html.Action("Detail_Option_List", new { id = Model.Id })
    </div>
</div>
<script language="javascript">
    function option_reload() {
        $.get("@Url.Action("Detail_Option_List", new { id = Model.Id })", function (data) {
                        $("#WDTB_Option").html("");
                        $("#WDTB_Option").html(data);
                        hide_loading();
                    });
    }
</script>
